{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      "./../envs/*.env",
      {
        "include": "../shared/templates/**",
        "outDir": "dist/src/shared"
      }
    ]
  }
}